.section{
    width: 100%;
}
.scroll-view-item{
    width: 100%;
    height: 200px;
}
.scroll-view_H{
    white-space: nowrap; 
    display: flex;
    width: auto;
}
.scroll-view-item_H{
    width: 100%;
    display: inline-block;
    height: 200px;
}
.bc_green{
    background-color: green;
}
.bc_red{
    background-color: red;
}
.bc_yellow{
    background-color: yellow;
}
.bc_blue{
    background-color: blue;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}